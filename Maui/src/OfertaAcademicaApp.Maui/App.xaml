<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OfertaAcademicaApp.Maui"
             xmlns:converters="clr-namespace:OfertaAcademicaApp.Maui.Converters"
             x:Class="OfertaAcademicaApp.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:RandomColorConverter x:Key="RandomColorConverter"/>
            <converters:DoubleToStringConverter x:Key="DoubleToStringConverter"/>
            <converters:FeatureEnumToImageConverter x:Key="FeatureEnumToImageConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
