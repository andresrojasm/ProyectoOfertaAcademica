<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="From.Carrera"
             BackgroundColor="#4d4d4f"
             Shell.NavBarIsVisible="False"
             Title="Carrera">

    <VerticalStackLayout>
         <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border
            StrokeThickness="0" 
            Grid.ColumnSpan="2" 
            Grid.Row="0" 
            Grid.Column="0" 
            Margin="5">
                <Label 
                    Text="Datos de la Carrera" 
                    x:Name="pantalla" 
                    VerticalTextAlignment="Start" 
                    FontSize="30" 
                    HorizontalTextAlignment="Center" 
                    BackgroundColor="{x:StaticResource Primario}"
                    TextColor="{x:StaticResource Cuarto}">
                </Label>
            </Border>

            <Label
                Grid.Row="1" Grid.Column="0"
                Text="CÃ³digo de la 
                Carrera: "
                FontSize="15"
                VerticalTextAlignment="Center"
                HorizontalOptions="Start"
                Margin="5,0,0,0"
                TextColor="{x:StaticResource Secundario}"/>
            <Label
                Grid.Row="2" Grid.Column="0"
                Text="Nombre: "
                FontSize="15"
                VerticalTextAlignment="Center"
                HorizontalOptions="Start"
                Margin="5,0,0,0"
                TextColor="{x:StaticResource Secundario}"/>
            <Label
                Grid.Row="3" Grid.Column="0"
                Text="Id Facultad: "
                FontSize="15"
                VerticalTextAlignment="Center"
                HorizontalOptions="Start" 
                Margin="5,0,0,0"
                TextColor="{x:StaticResource Secundario}"/>
            <Label
                Grid.Row="4" Grid.Column="0"
                Text="Id del Grado: "
                FontSize="15"
                VerticalTextAlignment="Center"
                HorizontalOptions="Start" 
                Margin="5,0,0,0"
                TextColor="{x:StaticResource Secundario}"/>
            <Entry 
                Grid.Row="1" Grid.Column="1"
                Placeholder="Id Carrera" 
                x:Name="IdCarreraEntry"
                HorizontalOptions="End"
                WidthRequest="250"
                Keyboard="Numeric"
                TextColor="{x:StaticResource Secundario}"
                BackgroundColor="{x:StaticResource Setimo}"
                Margin="10,0,15,7"/>
            <Entry 
                Grid.Row="2" Grid.Column="1"
                Placeholder="Nombre" 
                x:Name="NombreEntry"
                HorizontalOptions="End"
                WidthRequest="250"
                TextColor="{x:StaticResource Secundario}"
                BackgroundColor="{x:StaticResource Setimo}"
                Margin="10,0,15,7"/>
            <Entry 
                Grid.Row="3" Grid.Column="1"
                Placeholder="Id Facultad" 
                x:Name="IdFacultadEntry"
                HorizontalOptions="End"
                WidthRequest="250"
                TextColor="{x:StaticResource Secundario}"
                BackgroundColor="{x:StaticResource Setimo}"
                Margin="10,0,15,7"/>
            <Entry 
                Grid.Row="4" Grid.Column="1"
                Placeholder="Id Grado" 
                x:Name="IdGradoEntry"
                HorizontalOptions="End"
                WidthRequest="250"
                TextColor="{x:StaticResource Secundario}"
                BackgroundColor="{x:StaticResource Setimo}"
                Margin="10,0,15,7"/>

            <Button 
                Grid.Row="11" Grid.Column="0"
                Text="Atras" 
                Clicked="AtrasBtn_Clicked" 
                HorizontalOptions="Center" 
                VerticalOptions="Center" 
                Margin="0,0,0,0" 
                TextColor="{x:StaticResource Quinto}"
                BackgroundColor="{x:StaticResource Octabo}"/>

            <Button 
                Grid.Row="5" Grid.Column="1"
                Text="Guardar" 
                Clicked="GuardarClicked" 
                HorizontalOptions="Center" 
                VerticalOptions="Center" 
                Margin="0,0,0,0"
                TextColor="{x:StaticResource Quinto}"
            BackgroundColor="{x:StaticResource Cuarto}"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>